{
  "builders": [
    {
      "accelerator": "hvf",
      "disk_compression": true,
      "disk_discard": "unmap",
      "disk_image": true,
      "disk_interface": "virtio-scsi",
      "disk_size": "10000M",
      "format": "raw",
      "headless": true,
      "http_directory": "./packer-config",
      "iso_checksum": "file:https://cloud-images.ubuntu.com/bionic/current/SHA256SUMS",
      "iso_url": "https://cloud-images.ubuntu.com/bionic/current/bionic-server-cloudimg-amd64.img",
      "output_directory": "output-{{user `env`}}",
      "qemuargs": [
        [
          "-m",
          "8192"
        ],
        [
          "-smp",
          "4,cores=4,threads=1"
        ],
        [
          "-smbios",
          "type=1,serial=ds=nocloud-net;instance-id=packer;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/"
        ],
        [
          "-serial",
          "mon:stdio"
        ]
      ],
      "ssh_password": "ubuntu",
      "ssh_port": 22,
      "ssh_timeout": "300s",
      "ssh_username": "ubuntu",
      "type": "qemu",
      "use_default_display": true,
      "vm_name": "isucon10-qualify-{{user `env`}}"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo apt-get update",
        "sudo apt-get install -y python ansible"
      ],
      "type": "shell"
    },
    {
      "playbook_file": "../ansible/{{user `env`}}.yaml",
      "type": "ansible",
      "ansible_env_vars": ["ANSIBLE_CONFIG=../ansible/ansible.cfg"]
    },
    {
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "mv /etc/netplan/50-cloud-init.yaml /root/",
        "mv /etc/sudoers.d/90-cloud-init-users /root/",
        "/usr/bin/truncate --size 0 /etc/machine-id",
        "rm -r /var/lib/cloud /var/lib/dbus/machine-id ",
        "/bin/sync",
        "/sbin/fstrim -v /"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "env": ""
  }
}

